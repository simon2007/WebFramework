<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-4.3.xsd  
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:component-scan
		base-package="org.framework">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
		<context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Service" />
	</context:component-scan>
	<context:annotation-config />
	<mvc:annotation-driven>
		<mvc:message-converters>
			<ref bean="jackson_hmc" />
		</mvc:message-converters>

	</mvc:annotation-driven>

	<!-- 公共映射配置 -->
	<mvc:view-controller path="/" view-name="index" />


	<!-- 静态文件（css、js、images）配置不经过DispatchServelet处理 -->
	<mvc:resources location="/static/" mapping="/static/**" />
	<mvc:resources location="/static/favicon.ico"
		mapping="/favicon.ico" />
	<!-- 增加upload图片显示路径 -->
	<mvc:resources mapping="/upload/**" location="/upload/" />


	<!-- 视图解析器 -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView"></property>
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>

	<!-- 异常解析器 -->
	<bean id="handlerExceptionResolver"
		class="org.blue.webframework.framework.BlueExceptionHandlerExceptionResolver">
		<property name="webApiProcessor">
			<ref bean="webApiMethodResultConverter" />
		</property>
	</bean>

	<!-- webapi内容 -->
	<bean id="webApiMethodResultConverter"
		class="org.blue.webframework.framework.WebApiMethodResultConverter">
		<property name="webApiResultConverter">
			<ref bean="webapiHttpMessageConverter" />
		</property>
	</bean>
	<!-- 文件上传 -->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding" value="utf-8" />
		<property name="maxUploadSize" value="20971520" />
	</bean>

	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/*" />
			<bean class="web.interceptor.AuthUserInterceptor" />
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/admin/*" />
			<mvc:exclude-mapping path="/admin/login"/>
			<mvc:exclude-mapping path="/admin/reset"/>
			<bean class="web.interceptor.AuthAdminInterceptor" />
		</mvc:interceptor>
	</mvc:interceptors>


	<bean id="webapiHttpMessageConverter"
		class="org.blue.webframework.framework.resultconverter.WebApiResultConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>application/json;charset=UTF-8</value>
			</list>
		</property>
	</bean>

	<bean id="jackson_hmc"
		class="org.blue.webframework.framework.resultconverter.JsonResultConverter">
		<property name="supportedMediaTypes">
			<list>
				<value>application/json;charset=UTF-8</value>
			</list>
		</property>
	</bean>
	<!-- end webapi -->

</beans>